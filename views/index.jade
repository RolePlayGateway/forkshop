extends layout

block content

  if (typeof(user) != 'undefined')
    h2 Welcome, #{user.username}!

  else
    .hero-unit
      h1 Hello, Startup Weekend.
      p A simple framework for building your MVP.
      a.btn.btn-large.btn-primary.pull-right(href="/auth/github") Get Started &raquo;

    .row-fluid(style="margin-top: 3em; margin-bottom: 3em;")

      .span4
        h3 Tagline 1.
        p Super awesome pitch belongs here.

      .span4
        h3 Tagline 2.
        p What else can sell your app?

      .span4
        center
          a.btn.btn-large.btn-primary(href="/auth/github") Login with GitHub &raquo;